{
    "manifest_version": 2,
    "name": "MathJax Plugin for Github",
    "description": "Renders Github equations with MathJax",
    "version": "0.1.0",
    "permissions": [
        "https://github.com/*",
        "https://gist.github.com/*"
    ],
    "web_accessible_resources": [
        "dynamic_math.js",
        "mathjax_config.js",
        "node_modules/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*",
                "https://gist.github.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "numbering.css"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "128": "icon128.png"
    }
}